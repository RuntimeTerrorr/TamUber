<% provide(:title, "Checklist") %>
<% flash.each do |key, value| %>
      <div class="<%= flash_class(key) %>">
            <%= value %>
      </div>
<% end %>
<h1>This is a Checklist for the Car</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: checklist_path) do |f| %>

    <%= f.label "Clean Windshield" %> <br />
    <%= f.check_box :check_windshield %> <br />
    <%= f.label "Tire Pressure" %> <br />
    <%= f.check_box :check_tire %> <br />
    <%= f.label "Car Head Lights" %> <br />
    <%= f.check_box :check_light %> <br />
    <%= f.label "Gas" %> <br />
    <%= f.check_box :check_gas %> <br />

    <%= f.submit "Continue", class: "btn btn-primary" %>
    <% end %>

  </div>
</div>