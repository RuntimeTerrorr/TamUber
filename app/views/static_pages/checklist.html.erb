<% provide(:title, "Checklist") %>
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.2.0/css/all.css" integrity="sha384-hWVjflwFxL6sNzntih27bfxkr27PmbbK/iSvJ+a4+0owXq79v+lsFkW54bOGbiDQ" crossorigin="anonymous">
<h1 class="ah">This is a Checklist for the Car</h1>
<link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
<style type = "text/css">
    html, body {
        /*height: 100%;*/
        /*margin: 0;*/
        /*padding: 0;*/
        background-image: url(https://cnet4.cbsistatic.com/img/L0pm54fJ3KjS18Ge_IoDxSQZWlI=/1600x900/2018/01/12/9a4d6774-b833-402a-ad72-4d75eb45c5ae/gm-cruise-av-final.jpg);
        background-size: cover;
      }
</style>
<body>
    <div class="row">
        <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1" style = "background:white; 
        opacity: 0.85; margin-top: 50px; padding-top: 10px; padding-bottom: 10px">
          <%= form_for(:session, url: checklist_path) do |f| %>
    
            <%= f.label :vehicle_id %>
            <%= f.text_field :vehicle_id, class: 'form-control inline', value: 'Enter a Vehicle ID', id: 'vehicle_id' %><br>
          
            <%= f.label :check_tire, class: "checkbox inline" do %>
              <%= f.check_box :check_tire, id: 'check_tire' %>&nbsp;&nbsp;&nbsp;&nbsp;Tire Pressure<br>
            <% end %>
              
            <%= f.label :check_cooling, class: "checkbox inline" do %>
              <%= f.check_box :check_cooling, id: 'check_cooling' %>&nbsp;&nbsp;&nbsp;&nbsp;Cooling Liquid<br>
            <% end %>
              
            <%= f.label :check_engine, class: "checkbox inline" do %>
              <%= f.check_box :check_engine, id: 'check_engine' %>&nbsp;&nbsp;&nbsp;&nbsp;Engine Light<br>
            <% end %>
    
            <%= f.submit "Continue", class: "btn btn-primary" %>
          <% end %>
        </div>
    </div>
</body>

<script>
    $("#vehicle_id").focus(function(e) {
        if (this.value=='Enter a Vehicle ID') this.value = ''
    });
    $("#vehicle_id").blur(function(e) {
        if (this.value=='') this.value='Enter a Vehicle ID'
    });
</script>