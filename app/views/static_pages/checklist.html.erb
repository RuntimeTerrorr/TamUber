<% provide(:title, "Checklist") %>

<h1>This is a Checklist for the Car</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: checklist_path) do |f| %>

    <%= f.label "Cricket" %> <br />
    <%= f.check_box :check_cricket %> <br />
    
       <%= f.label "Badminton" %> <br />
    <%= f.check_box :check_badminton %> <br />
        <%= f.label "Tennis" %> <br />
    <%= f.check_box :check_tennis %> <br />
        <%= f.label "Football" %> <br />
    <%= f.check_box :check_football %> <br />

    <%= f.submit "Home", class: "btn btn-primary" %>
    <% end %>

  </div>
</div>